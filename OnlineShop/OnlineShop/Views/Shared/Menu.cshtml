@model List<Model.EF.Menu>
<div class="wrap" style="position:relative">
    <div class="logo" style="max-width:7%">
        <a href="/"><img src="/assets/client/images/logopnj.png" alt="" /></a>
    </div>
    <div class="cssmenu" style="position:absolute; right:0">
        @{
            var session = (UserLogin)Session[OnlineShop.Common.CommonConstants.USER_SESSION];
        }
        <ul style="position:relative">
            @foreach (var item in Model)
            {
                <li><a href="@item.Link">@item.Text</a></li>
            }

            @if (session != null)
            {
                <li>@Html.ActionLink("Logout", "Logout", "User")</li>
                <li style="position:absolute;bottom:-55px;right:0px;color:white">Xin chào: @session.UserName</li>
            }
            else
            {
                <li>@Html.ActionLink("Login", "Login", "User")</li>
            }
        </ul>
    </div>
    <div class="clear"></div>
</div>
