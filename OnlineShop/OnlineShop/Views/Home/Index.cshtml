
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
}


@section slide{
    <div class="index-banner">
        <div class="wmuSlider example1" style="height: 560px;">
            <div class="wmuSliderWrapper">
                <article style="position: relative; width: 100%; opacity: 1;">
                    <div class="banner-wrap">
                        <div class="slider">
                            <img src="/assets/client/images/banner6.jpg" alt="" />
                        </div>
                        <div class="clear"></div>
                    </div>
                </article>
                <article style="position: absolute; width: 100%; opacity: 0;">
                    <div class="banner-wrap">
                        <div class="slider">
                            <img src="/assets/client/images/banner7.jpg" alt="" />
                        </div>
                        <div class="clear"></div>
                    </div>
                </article>
                <article style="position: absolute; width: 100%; opacity: 0;">
                    <div class="banner-wrap">
                        <div class="slider">
                            <img src="/assets/client/images/banner3.jpg" alt="" />
                        </div>
                        <div class="clear"></div>
                    </div>
                </article>
                <article style="position: absolute; width: 100%; opacity: 0;">
                    <div class="banner-wrap">
                        <div class="slider">
                            <img src="/assets/client/images/banner4.jpg" alt="" />
                        </div>
                        <div class="clear"></div>
                    </div>
                </article>
                <article style="position: absolute; width: 100%; opacity: 0;">
                    <div class="banner-wrap">
                        <div class="slider">
                            <img src="/assets/client/images/banner5.jpg" alt="" />
                        </div>
                        <div class="clear"></div>
                    </div>
                </article>
            </div>
            <a class="wmuSliderPrev">Previous</a><a class="wmuSliderNext">Next</a>
            <ul class="wmuSliderPagination">
                <li><a href="#" class="">0</a></li>
                <li><a href="#" class="">1</a></li>
                <li><a href="#" class="wmuActive">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
            </ul>
            <a class="wmuSliderPrev">Previous</a><a class="wmuSliderNext">Next</a><ul class="wmuSliderPagination"><li><a href="#" class="wmuActive">0</a></li><li><a href="#" class="">1</a></li><li><a href="#" class="">2</a></li><li><a href="#" class="">3</a></li><li><a href="#" class="">4</a></li></ul>
        </div>
        <script src="/assets/client/js/jquery.wmuSlider.js"></script>
        <script type="text/javascript" src="/assets/client/js/modernizr.custom.min.js"></script>
        <script>
       						 $('.example1').wmuSlider();
        </script>
    </div>
}

<div class="wrap">
    <div class="content-bottom" style="margin-top:5%">
        <h3 class="m_3" style="margin-bottom:25px; font-size:28px">Products News</h3>
        <div class="box1" style="display:flex;justify-content:space-between;flex-wrap:wrap">
            @foreach (var item in listNewProducts)
            {
                var url = "detail/" + item.MetaTitle + "-" + item.ID;
                <div class="item" style="width:32%;margin-bottom:15px;border:1px solid #DDD">
                    <a href="@url">
                        <div class="view view-fifth">
                            <div class="top_box">
                                <h3 class="m_1" style="min-height:33.78px">@item.Name</h3>
                                <div class="grid_img">
                                    <div class="css3" style="max-width:50%;margin:0 auto;padding:10px"><img src="@item.Image" alt="@item.Name" style="width:100%" /></div>
                                    <div class="mask">
                                        <div class="info">Quick View</div>
                                    </div>
                                </div>
                                <div class="price">£ @(item.Price!=0?item.Price.Value.ToString("N0"):"Update...")</div>
                            </div>
                        </div>
                        <span class="rating" style="width:50%">
                            <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                            <label for="rating-input-1-5" class="rating-star1"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                            <label for="rating-input-1-4" class="rating-star1"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                            <label for="rating-input-1-3" class="rating-star1"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                            <label for="rating-input-1-2" class="rating-star"></label>
                            <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                            <label for="rating-input-1-1" class="rating-star"></label>&nbsp;
                            (@item.Quantity)
                        </span>
                        <ul class="list" style="padding:1.5% 0;margin-bottom:0">
                            <li>
                                <img src="/assets/client/images/plus.png" alt="" />
                                <ul class="icon1 sub-icon1 profile_img">
                                    <li>
                                        <a class="active-icon c1" href="/them-gio-hang?productId=@item.ID&quantity=1">Add To Bag </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

