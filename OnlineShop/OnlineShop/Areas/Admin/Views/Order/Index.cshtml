@model PagedList.IPagedList<Model.EF.Order>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "List Order";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List Order</h2>
<div class="container-fluid">

    <div class="row">
        <div class="col col-md-12">
            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                <div class="input-group">
                    <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                           aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>CreatedDate</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.ShipName</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.ShipMobile</td>
                                <td>@item.ShipAddress</td>
                                <td>
                                    <a href="#" onclick="if (confirm('Are you sure you want to delete item?') == true) { location.href='/Admin/Order/Delete?id=@item.ID' }" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
