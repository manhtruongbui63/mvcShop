
@{
    ViewBag.Title = "Revenue";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listCustomer = (List<Model.ViewModel.OrderListViewModel>)ViewBag.ListByCustomer;
    var listDay = (List<Model.ViewModel.OrderListViewModel>)ViewBag.ListByDay;
    var listMonth = (List<Model.ViewModel.OrderListViewModel>)ViewBag.ListByMonth;
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables Revenue</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="item row" style="margin:10px auto">
                    <div class="col col-md-6">
                        <h4>Revenue By Day</h4>
                        <table class="table table-bordered" id="dataTable" width="50%" cellspacing="0">
                            <thead>
                                <tr style="font-weight:bold">
                                    <td>Day</td>
                                    <td>Revenue</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listDay)
                                {
                                    <tr>
                                        <td>@item.Date.Value.ToString("MMM dd yyyy")</td>
                                        <td>@item.Revenue.GetValueOrDefault(0).ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="col col-md-6">
                        <h4>Revenue By Month</h4>
                        <table class="table table-bordered" id="dataTable" width="50%" cellspacing="0">
                            <thead>
                                <tr style="font-weight:bold">
                                    <td>Month</td>
                                    <td>Revenue</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listMonth)
                                {
                                    <tr>
                                        <td>@item.Date.Value.ToString("MMM yyyy")</td>
                                        <td>@item.Revenue.GetValueOrDefault(0).ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="item row" style="margin:40px auto">
                    <div class="col col-md-6">
                        <h4>Revenue By Customer</h4>
                        <table class="table table-bordered" id="dataTable" width="50%" cellspacing="0">
                            <thead>
                                <tr style="font-weight:bold">
                                    <td>Customer Name</td>
                                    <td>Revenue</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listCustomer)
                                {
                                    <tr>
                                        <td>@item.Name.ToString()</td>
                                        <td>@item.Revenue.GetValueOrDefault(0).ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
